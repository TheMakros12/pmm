<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WelcomeActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgLogoSimarro"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/logo_simarro"
        android:contentDescription="@string/txtCotDescImgSimarro"
        />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgLogoSimarro"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center"
        android:text="@string/txtBtnEntrar"
        android:textStyle="bold"
        android:backgroundTint="#1EEC23"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/welcome2"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#55FFFFFF"
            />

    </LinearLayout>

</LinearLayout>