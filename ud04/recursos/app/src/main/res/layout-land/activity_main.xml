<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:src="@drawable/thecrown"
        android:scaleType="centerCrop"
        android:contentDescription="@string/contentDescrp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/series_tittle"
        android:textColor="@color/primaryText"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivPoster"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/imgEdad"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:textColor="@color/secondaryText"
        android:src="@drawable/edad13"
        app:layout_constraintStart_toEndOf="@id/ivPoster"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/tvDescrp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/name_psinopsis"
        android:textColor="@color/secondaryText"
        android:padding="15dp"
        app:layout_constraintStart_toEndOf="@id/ivPoster"
        app:layout_constraintTop_toBottomOf="@id/imgEdad"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btnWatchNow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btnWatchNow"
        android:backgroundTint="@color/btn"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvDescrp"
        app:layout_constraintStart_toEndOf="@id/ivPoster"
        app:layout_constraintEnd_toStartOf="@id/btnAddList"
        />

    <Button
        android:id="@+id/btnAddList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btnAddToList"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@id/btnWatchNow"
        app:layout_constraintTop_toBottomOf="@id/tvDescrp"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>