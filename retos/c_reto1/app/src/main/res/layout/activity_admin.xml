<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationSpotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_rawRes="@raw/lottie_spotify"
        app:lottie_autoPlay="true"
        android:visibility="visible"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationPerfiles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_rawRes="@raw/lottie_perfiles"
        android:visibility="gone"
        app:lottie_autoPlay="false"
        />

    <ScrollView
        android:id="@+id/scrollViewUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@id/bnvUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                >

                <ImageView
                    android:id="@+id/albumBuenasNoches"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/imgAlbum"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/buenas_noches"
                    android:contentDescription="@string/contDescrpImgAlbum"
                    />

                <ImageView
                    android:id="@+id/albumData"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/imgAlbum"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/data"
                    android:contentDescription="@string/contDescrpImgAlbum"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                >

                <ImageView
                    android:id="@+id/albumMeMuevoConDios"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/imgAlbum"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/me_muevo_con_dios"
                    android:contentDescription="@string/contDescrpImgAlbum"
                    />

                <ImageView
                    android:id="@+id/albumTodosLosDiasTodoElDia"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/imgAlbum"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/todos_los_dias_todo_el_dia"
                    android:contentDescription="@string/contDescrpImgAlbum"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                >

                <ImageView
                    android:id="@+id/albumYHLQMDLG"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/imgAlbum"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/yhlqmdlg"
                    android:contentDescription="@string/contDescrpImgAlbum"
                    />

                <ImageView
                    android:id="@+id/albumNatsukashiiYoru"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/imgAlbum"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/natsukashii_yoru"
                    android:contentDescription="@string/contDescrpImgAlbum"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                >

                <ImageView
                    android:id="@+id/albumPortateBien"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/imgAlbum"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/portate_bien"
                    android:contentDescription="@string/contDescrpImgAlbum"
                    />

                <ImageView
                    android:id="@+id/albumSayonara"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/imgAlbum"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/sayonara"
                    android:contentDescription="@string/contDescrpImgAlbum"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnvUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/spotify"
        app:menu="@menu/menu_admin"
        />

</androidx.constraintlayout.widget.ConstraintLayout>