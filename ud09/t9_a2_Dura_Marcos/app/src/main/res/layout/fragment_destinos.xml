<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.destinos.DestinosFragment"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivDestinosFavoritos"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/img_destinosfavoritos"
        android:scaleType="fitXY"
        android:contentDescription="@string/txtContentDescriptionIvDestinos"
        />

    <EditText
        android:id="@+id/etDestino"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivDestinosFavoritos"
        app:layout_constraintEnd_toStartOf="@id/btnAnyadirDestino"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btnAnyadirDestino"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/etDestino"
        app:layout_constraintTop_toBottomOf="@id/ivDestinosFavoritos"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/txtBtnAnyadir"
        android:layout_marginTop="20dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewDestinos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etDestino"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_destino"
        android:layout_marginTop="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>