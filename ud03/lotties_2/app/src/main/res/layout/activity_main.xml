<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animacionAvion"
        android:layout_width="@dimen/animacionAvion"
        android:layout_height="@dimen/animacionAvion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/animation_paperplane"
        />

    <Button
        android:id="@+id/btnLanzar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtBtnLanzar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/animacionAvion"
        app:layout_constraintEnd_toEndOf="parent"
        style="?attr/materialButtonOutlinedStyle"
        />

    <LinearLayout
        android:id="@+id/layoutControlesAvanzados"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnLanzar"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btnVelocidadNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtBtnVelocidadNormal"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_marginStart="8dp"
                />

            <Button
                android:id="@+id/btnVelocidadRapida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtBtnVelocidadRapida"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_marginStart="8dp"
                />

            <Button
                android:id="@+id/btnVelocidadInversa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtBtnVelocidadInversa"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_marginStart="8dp"
                />

        </LinearLayout>

        <SeekBar
            android:id="@+id/seekbarProgreso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtBtnReset"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_marginTop="8dp"
            />

    </LinearLayout>

    <View
        android:id="@+id/separador"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/layoutControlesAvanzados"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        />

    <Button
        android:id="@+id/btnDescargar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separador"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/txtBtnDescargar"
        style="?attr/materialButtonOutlinedStyle"
        />

    <FrameLayout
        android:id="@+id/layoutDescarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDescargar"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animacionCargando"
            android:layout_width="@dimen/animacionDescarga"
            android:layout_height="@dimen/animacionDescarga"
            app:lottie_loop="true"
            android:visibility="gone"
            app:lottie_rawRes="@raw/animation_loading"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animacionExito"
            android:layout_width="@dimen/animacionDescarga"
            android:layout_height="@dimen/animacionDescarga"
            app:lottie_loop="false"
            android:visibility="gone"
            app:lottie_rawRes="@raw/animation_success"
            />

    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAccionPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"
        android:contentDescription="@string/fabContentDescription"
        android:src="@drawable/smartphone_24"
        />

</androidx.constraintlayout.widget.ConstraintLayout>